doctype html5
html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='vierport', content='width=device-width, initial-scale=1')
        title Soldsie PSI
        // bootstrap
        link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css')
        // custom css
        link(rel='stylesheet', href='/stylesheet/styles.css')
        // js
        script(src='https://code.jquery.com/jquery-2.1.3.min.js')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.2/underscore-min.js')
        script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/mustache.js/0.8.1/mustache.min.js')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/backbone.js/1.1.2/backbone-min.js')
        script(src='http://cdn.lukej.me/backbone.epoxy/1.2/backbone.epoxy.min.js')

        script(src='http://code.highcharts.com/highcharts.js')
        script(src='http://code.highcharts.com/highcharts-more.js')
        script(src='http://code.highcharts.com/modules/exporting.js')

        link(href='http://fonts.googleapis.com/css?family=Lato:300,400,700,900', rel='stylesheet', type='text/css')

    body
        // --- category template ---
        script(id='template-cat', type='html/template')
            | {{#categories}}
            li(class='cat-wrapper {{navClass}}')
                a(id='cat-{{name}}', class='nav-link', href='#')= '{{name}}'
            | {{/categories}}
        // --- result list template ---
        script(id='template-rl', type='html/template')

            // {{brandName}}
            // {{rank}}

            div(class='brand-int')
                div(class='brand-image-frame')
                    a(href='{{url}}', target='_blank')
                        span(class='brand-image', style='background-image: url(/image/brand-logo/{{logo}});')

                div(class='brand-score' id='brand-score-{{rank}}')
                    div(class='sample-graph')

                    div(class='score-frame')
                        {{score}}

                div(class='brand-breakdown')

                    div(class='breakdown-stat')
                        div
                            {{likes}}
                            div(class='breakdown-stat-title')
                                | Likes

                    div(class='breakdown-stat')
                        div
                            {{comments}}
                            div(class='breakdown-stat-title')
                                | Comments

                    div(class='breakdown-seperator')

                    div(class='breakdown-stat')
                        div
                            {{tweets}}
                            div(class='breakdown-stat-title')
                                | Tweets

                    div(class='breakdown-stat')
                        div
                            {{retweets}}
                            div(class='breakdown-stat-title')
                                | Retweets

        // ======= actual HTML content ========
        div(class='container')
            div(class='row')
                div(class='col-xs-12 col-md-12')
                    h1 Product Social Index
                // === category view ===
                div(id='prod-cats', class='col-xs-12 col-md-12')
                    nav(class='navbar navbar-default navbar-static-top')
                        div(class='container')
                            div(class='navbar-header')
                            ul(id='cat-container', class='nav navbar-nav')

        div(class='brands-container')
            div(class='container')
                div(class='row')
                    div(class='col-xs-12 col-md-12')
                        // === rank list view ===
                        div(id='rank-container', class='col-xs-12 col-md-12')
        div(class='container')
            div(class='row')
                div(class='col-xs-12 col-md-12')
                    div(id="graph-container" style="min-width: 310px; height: 400px; margin: 0 auto")


        // category view
        script(src='/script/category/category-model.js')
        script(src='/script/category/category-view.js')
        script(src='/script/rank/rank-model.js')
        script(src='/script/rank/rank-view.js')
        script(src='/script/graph/graph-model.js')
        script(src='/script/graph/graph-view.js')
        script(src='/script/main.js')






