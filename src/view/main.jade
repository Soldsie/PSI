doctype html5
html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='vierport', content='width=device-width, initial-scale=1')
        title Soldsie PSI
        // bootstrap
        link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css')        
        // js
        script(src='https://code.jquery.com/jquery-2.1.3.min.js')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.2/underscore-min.js')
        script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/mustache.js/0.8.1/mustache.min.js')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/backbone.js/1.1.2/backbone-min.js')
        script(src='http://cdn.lukej.me/backbone.epoxy/1.2/backbone.epoxy.min.js')
    body
        // --- category template ---
        script(id='template-cat', type='html/template')
            | {{#categories}}
            li(class='cat-wrapper {{navClass}}')
                a(id='cat-{{name}}', class='nav-link', href='#')= '{{name}}'
            | {{/categories}}
        // --- result list template ---
        script(id='template-rl', type='html/template')
            div(class='row')
                div(class='col-xs-2 col-md-2')
                    p(style='font-size: 16px; font-weight: bold; margin-right: 10px;')= '{{rank}}'
                div(class='col-xs-4 col-md-4')
                    span
                        img(src='/static/image/brand-logo/{{logo}}', width=150, height=150, style='margin-right: 10px;')
                    span(style='font-size: 20px; font-weight: bold;')= '{{brandName}}'
                div(class='col-xs-2 col-md-2')
                    span(class='badge')= '{{score}}'
                div(class='col-xs-2 col-md-2')
                    span(class='badge')= '{{likes}}'
                div(class='col-xs-2 col-md-2')
                    span(class='badge')= '{{comments}}'                    

        // ======= actual HTML content ========    
        div(class='container')
            div(class='row')
                div(class='col-xs-12 col-md-12')
                    h1 Product Social Index
                // === category view ===
                div(id='prod-cats', class='col-xs-12 col-md-12')
                    nav(class='navbar navbar-default navbar-static-top')
                        div(class='container')
                            div(class='navbar-header')
                                h4 Categories
                            ul(id='cat-container', class='nav navbar-nav')
                // === rank list view ===
                div(id='rank-container', class='col-xs-12 col-md-12')                
                    div(class='row')
                        div(class='col-xs-2 col-md-2')
                            h4 Rank
                        div(class='col-xs-4 col-md-4')
                            h4 Brand
                        div(class='col-xs-2 col-md-2')
                            h4 Score
                        div(class='col-xs-2 col-md-2')
                            h4 Likes
                        div(class='col-xs-2 col-md-2')
                            h4 Comments

        // category view
        script(src='/static/script/category/category-model.js')
        script(src='/static/script/category/category-view.js')
        script(src='/static/script/rank/rank-model.js')
        script(src='/static/script/rank/rank-view.js')
        script(src='/static/script/main.js')